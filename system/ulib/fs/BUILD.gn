config("fs_config") {
  include_dirs = [ "include" ]
}

static_library("fs") {
  # Don't forget to update rules.mk as well for the Magenta build.
  sources = [
    "mapped-vmo.cpp",
    "mxio-dispatcher.cpp",
    "vfs.cpp",
    "vfs-mount.cpp",
    "vfs-unmount.cpp",
    "vfs-rpc.cpp",
    "vfs-dispatcher.cpp",
    "vfs-watcher.cpp",
  ]

  public_configs = [ ":fs_config" ]

  defines = [
    # TODO(abarth): Should we define this symbol in Fuchsia toolchain?
    "_ALL_SOURCE=1",
  ]

  include_dirs = [
    "//magenta/system/private",
  ]

  deps = [
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxalloc",
    "//magenta/system/ulib/mxcpp",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [
    "magenta",
    "mxio",
  ]
}
